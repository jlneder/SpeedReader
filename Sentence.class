    public void loadPrepositions(){
        try{
            in = new Scanner(new File("prepositions.txt"));
        }catch(IOException i){
            System.out.println("Error: " + i.getMessage());
        }

        String text = "";
        while(in.hasNextLine()){
            text = in.nextLine();
            prepositions.add(text);
        }

        Iterator itr = prepositions.iterator();
        while(itr.hasNext()){
            System.out.println(itr.next());
        }

    }

    /**
     * adds chunks to the chunks(arraylist)
     * 
     *  - at first chunk by commas,
     */
    public void chunkSentence(){
        System.out.println(sentence);
        while(sentence.indexOf(",") > -1){
            System.out.println("_____");
            chunk_splits.add(sentence.indexOf(","));
        }
        
        for(int splits:chunk_splits){
            System.out.println(splits);
        }
        
        
       
        
    }

    public String getSentence(){
        return sentence;
    }

    public ArrayList<Chunk> getChunks(){
        return chunks;
    }

